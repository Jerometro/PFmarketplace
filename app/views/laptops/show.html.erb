<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path(@laptop.photo.key) %>')">
</div>
<div id="full-laptop-show">
  <div id="full-card">
    <div class="laptop-details">
      <h1><%= @laptop.name %></h1>
      <p><%= @laptop.address %></p>
      <p> Owned by <%= @laptop.user.first_name.capitalize %> </p>
    </div>
    <div class="laptop-details">
      <h3>Description</h3>
      <p> <%= @laptop.description %> </p>
    </div>
    <div class="laptop-details">
      <h2>Price</h2>
        <div class="laptop-infos">
          <div class="price">
            <p><%= @laptop.price_per_day %> €/day</p>
          </div>
      </div>
    </div>
  </div>
    <% if (@laptop.user != current_user) %>
      <div id="book-laptop">
        <h2>Book this laptop !</h2>
        <%= render "bookings/new" %>
        <br>
        <p>Total Price :</p>
        <p id="total-price" >0€</p>
      </div>
    <% else %>
      <%= link_to "Back to laptops", laptops_path(@laptop), class: "btn-show btn btn-warning" %>
    <% end %>
</div>
