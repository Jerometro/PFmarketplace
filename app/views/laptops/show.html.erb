<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path(@laptop.photo.key) %>')">
</div>
<div id="full-laptop-show">
  <div id="full-card">
    <div class="laptop-details">
      <h1><%= @laptop.name %></h1>
      <p><%= @laptop.address %></p>
      <p> Owned by <%= @laptop.user.first_name.capitalize %> </p>
    </div>
    <div class="laptop-details">
      <h3> <%= @laptop.description %> </h3>
    </div>
    <div class="laptop-details">
        <div class="laptop-infos">
          <div class="price">
            <h2><%= @laptop.price_per_day %> €/day</h2>
          </div>
      </div>
    </div>
  </div>
    <% if (@laptop.user != current_user) %>
      <div id="book-laptop">
        <h2>Book this laptop !</h2>
        <%= render "bookings/new" %>
        <br>
        <div id="full-price">
          <p>Total Price :</p>
          <p id="total-price" data-price-per-day="<%= @laptop.price_per_day %>" >0€</p>
        </div>
      </div>
    <% else %>
    <% end %>
</div>
