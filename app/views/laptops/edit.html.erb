<div class="front-form">

<%= simple_form_for(@laptop) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :price_per_day %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: "btn btn-primary" %>
  <%= link_to "Cancel", dashboard_path, class: "btn btn-warning m-3" %>
<% end %>

<%= link_to "Back to Laptops", laptops_path %>


</div>
